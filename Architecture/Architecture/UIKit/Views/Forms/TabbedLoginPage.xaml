<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:d="http://xamarin.com/schemas/2014/forms/design"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             x:Class="Architecture.TabbedLoginPage"
             xmlns:local="clr-namespace:Architecture"
             xmlns:controls="clr-namespace:Architecture.Controls"
             Visual="Material">

    <NavigationPage.TitleView>
        <controls:PageTitleView Text="Welcome" />
    </NavigationPage.TitleView>
    
    <Grid RowSpacing="0">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Grid ColumnSpacing="20" Padding="{StaticResource LargeSpacing}">
            <Grid.Effects>
                <local:GradientEffect Direction="ToBottom" />
            </Grid.Effects>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Label 
                Text="{StaticResource GeneralIcon}"
                FontFamily="{StaticResource FontAwesomeBrands}"
                FontSize="64"
                TextColor="White" />
            <StackLayout Grid.Column="1">
                <Label 
                    Text="Welcome to Architecture"
                    TextColor="White"
                    FontSize="Large"
                    FontAttributes="Bold"/>
                <Label 
                    Text="Welcome back!"
                    TextColor="White" />
            </StackLayout>
        </Grid>
        <controls:SegmentControl Grid.Row="1" ValueChangedCommand="{Binding ViewOptionChangedCommand}">
            <controls:SegmentControl.ItemsSource>
                <controls:SegmentControlItem IsSelected="True" Text="Login" Tag="1" />
                <controls:SegmentControlItem Text="Sign up" Tag="2" />
            </controls:SegmentControl.ItemsSource>
        </controls:SegmentControl>
        <ScrollView 
            Grid.Row="2"
            Padding="{StaticResource LargeSpacing}">
            <Grid>
                <!-- Login -->
                <StackLayout 
                    Spacing="{StaticResource MainSpacing}"
                    IsVisible="{Binding IsLoginVisible}">
                    <controls:ValidationEntry 
                        Placeholder="Username"
                        IconTextSource="&#xf007;"
                        IconFontFamily="{StaticResource FontAwesomeSolid}"
                        Value="{Binding LoginModel.Username, Mode=TwoWay}" />
                    <controls:ValidationEntry 
                        IconTextSource="&#xf023;"
                        IconFontFamily="{StaticResource FontAwesomeSolid}"
                        Placeholder="Password" 
                        IsPassword="True" 
                        Value="{Binding LoginModel.Password, Mode=TwoWay}" />
                    <StackLayout 
                        HorizontalOptions="Start"
                        Orientation="Horizontal">
                        <CheckBox 
                            IsChecked="{Binding RememberMe, Mode=TwoWay}"
                            WidthRequest="32"
                            Color="{StaticResource Accent}" />
                        <Label 
                            VerticalOptions="Center"
                            Text="Remember me?" />
                    </StackLayout>
                    <Button 
                        Text="{StaticResource CheckIcon}"
                        FontFamily="{StaticResource FontAwesomeSolid}" />
                    <Label
                        HorizontalOptions="End"
                        Text="Forgot password?">
                    </Label>
                </StackLayout>
                <!-- Sign up -->
                <StackLayout 
                    Spacing="{StaticResource MainSpacing}"
                    IsVisible="{Binding IsLoginVisible, Converter={StaticResource InvertedBoolConv}}">
                    <controls:ValidationEntry 
                        Placeholder="Email"
                        IconTextSource="&#xf0e0;"
                        Keyboard="Email"
                        Value="{Binding SignUpModel.Email, Mode=TwoWay}"
                        IconFontFamily="{StaticResource FontAwesomeSolid}" />
                    <controls:ValidationEntry 
                        IconTextSource="&#xf023;"
                        IconFontFamily="{StaticResource FontAwesomeSolid}"
                        Placeholder="Password" 
                        IsPassword="True" 
                        Value="{Binding SignUpModel.Password, Mode=TwoWay}" />
                    <controls:ValidationEntry 
                        IconTextSource="&#xf023;"
                        IconFontFamily="{StaticResource FontAwesomeSolid}"
                        Placeholder="Confirm password" 
                        IsPassword="True" 
                        Value="{Binding SignUpModel.ConfirmPassword, Mode=TwoWay}" />
                    <Button 
                        Text="{StaticResource CheckIcon}"
                        FontFamily="{StaticResource FontAwesomeSolid}"/>
                </StackLayout>
            </Grid>
        </ScrollView>
    </Grid>
    
</ContentPage>