<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:d="http://xamarin.com/schemas/2014/forms/design"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             x:Class="Architecture.FullLoginPage"
             xmlns:controls="clr-namespace:Architecture.Controls"
             xmlns:local="clr-namespace:Architecture"
             Visual="Material"
             x:DataType="local:LoginViewModel">

    <ScrollView>
        <Grid>
            <StackLayout
                Spacing="{StaticResource MainSpacing}"
                Padding="{StaticResource FormPadding}"
                IsVisible="{Binding IsBusy, Converter={StaticResource InvertedBoolConv}}">
                <Label
                    Margin="0, 40"
                    TextColor="{StaticResource PrimaryColor}"
                    VerticalOptions="Center"
                    FontSize="42"
                    Text="Login" />
                <Entry 
                    Placeholder="Username"
                    Text="{Binding Username.Value, Mode=TwoWay}"
                    PlaceholderColor="{StaticResource PrimaryColor}"
                    TextColor="{StaticResource PrimaryColor}" />
                <Entry 
                    Placeholder="Password" 
                    IsPassword="True"
                    Text="{Binding Password.Value, Mode=TwoWay}"
                    PlaceholderColor="{StaticResource PrimaryColor}"
                    TextColor="{StaticResource PrimaryColor}" />
                <StackLayout 
                    HorizontalOptions="Start"
                    Orientation="Horizontal">
                    <CheckBox 
                        IsChecked="{Binding RememberMe, Mode=TwoWay}"
                        WidthRequest="32"
                        Color="{StaticResource PrimaryColor}" />
                    <Label 
                        FontSize="Default"
                        VerticalOptions="Center"
                        Text="Remember me" />
                </StackLayout>
                <Button 
                    Command="{Binding LoginCommand}" 
                    Text="{StaticResource CheckIcon}"
                    FontFamily="{StaticResource FontAwesomeSolid}" />
                <Label
                    FontSize="Default"
                    FontAttributes="Bold"
                    TextColor="{StaticResource PrimaryColor}"
                    HorizontalOptions="End"
                    Text="Forgot password?">
                    <Label.GestureRecognizers>
                        <TapGestureRecognizer Command="{Binding ForgotPasswordCommand}" />
                    </Label.GestureRecognizers>
                </Label>
            </StackLayout>
            <controls:LoadingView IsRunning="{Binding IsBusy}" />
            <Label
                Margin="0, 40, 40, 0"
                IsVisible="{Binding IsBusy, Converter={StaticResource InvertedBoolConv}}"
                VerticalOptions="Start"
                HorizontalOptions="End"
                FontSize="Large"
                Text="{StaticResource CloseIcon}"
                FontFamily="{StaticResource FontAwesomeSolid}"
                TextColor="Black">
                <Label.GestureRecognizers>
                    <TapGestureRecognizer Command="{Binding PopModalCommand}" />
                </Label.GestureRecognizers>
            </Label>
        </Grid>
    </ScrollView>
</ContentPage>