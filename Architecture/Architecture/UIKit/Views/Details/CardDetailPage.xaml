                <Frame Margin="{StaticResource MainPadding}">
                    <StackLayout Spacing="{StaticResource MainSpacing}">
                        <Label 
                            FontSize="Small"
                            Text="Mar 3, 2019" />
                        <Label 
                            FontSize="Large"
                            Text="Awesome times in the sun" />
                        <Grid>
                            <Label
                                Grid.Column="0"
                                Text="TRAVELS"
                                FontSize="Default"
                                FontAttributes="Bold"
                                TextColor="{StaticResource PrimaryColor}" />
                            <Label
                                Grid.Column="1"
                                HorizontalTextAlignment="End"
                                FontSize="Small"
                                TextColor="{StaticResource PrimaryColor}">
                                <Label.FormattedText>
                                    <FormattedString>
                                        <Span Text="2K" />
                                        <Span Text=" " />
                                        <Span Text="{StaticResource GeneralIcon}" FontFamily="{StaticResource FontAwesomeBrands}" />
                                    </FormattedString>
                                </Label.FormattedText>
                            </Label>
                            <Label
                                Grid.Column="2"
                                HorizontalTextAlignment="End"
                                FontSize="Small"
                                TextColor="{StaticResource PrimaryColor}">
                                <Label.FormattedText>
                                    <FormattedString>
                                        <Span Text="15" />
                                        <Span Text=" " />
                                        <Span Text="&#xf27a;" FontFamily="{StaticResource FontAwesomeRegular}" />
                                    </FormattedString>
                                </Label.FormattedText>
                            </Label>
                        </Grid>
