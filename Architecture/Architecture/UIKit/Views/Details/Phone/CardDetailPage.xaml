                <TapGestureRecognizer Command="{Binding ImageCommand}" />
            </ff:CachedImage.GestureRecognizers>
        </ff:CachedImage>
        <ScrollView>
            <Frame Margin="24, 125, 24, 24">
                <StackLayout>
