<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Architecture.UIKit.Views.Desktop.ArticlesView"
             xmlns:local="clr-namespace:Architecture.UIKit"
             xmlns:ff="clr-namespace:FFImageLoading.Forms;assembly=FFImageLoading.Forms"
             xmlns:controls="clr-namespace:Architecture.Controls"
             Visual="Material"
             x:DataType="local:ArticlesViewModel"
             x:Name="articleRoot">

    <ContentPage.BindingContext> 
        <local:ArticlesViewModel />
    </ContentPage.BindingContext>

    <NavigationPage.TitleView>
        <controls:PageTitleView Text="Articles" />
    </NavigationPage.TitleView>

    <ContentPage.Content>

        <Grid 
            ColumnDefinitions="2*, *"
            RowDefinitions="*, *"
            ColumnSpacing="40"
            Margin="{StaticResource DesktopMargin}">

        </Grid>

    </ContentPage.Content>
</ContentPage>