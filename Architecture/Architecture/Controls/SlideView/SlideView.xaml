<?xml version="1.0" encoding="UTF-8"?>
<ContentView xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Architecture.Controls.SlideView"
             x:Name="rootSlideView">
    
    <StackLayout Spacing="0">
        <ContentView x:Name="HeaderView" Content="{Binding HeaderContent, Source={x:Reference rootSlideView}}">
            <ContentView.GestureRecognizers>
                <TapGestureRecognizer Command="{Binding TappedCommand, Source={x:Reference rootSlideView}}" />
            </ContentView.GestureRecognizers>
        </ContentView>
        <ContentView x:Name="HiddenView" IsClippedToBounds="True" VerticalOptions="Start" Content="{Binding HiddenContent, Source={x:Reference rootSlideView}}" />
    </StackLayout>
    
</ContentView>